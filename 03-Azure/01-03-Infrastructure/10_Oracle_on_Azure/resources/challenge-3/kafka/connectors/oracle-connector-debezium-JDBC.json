{
  "name": "oracle-connector",
  "config": {
    "connector.class": "io.debezium.connector.oracle.OracleConnector",
    "tasks.max": "1",
    "database.dbname": "XE",
    "database.server.name": "microhack",
    "database.user": "demo_schema",
    "database.password": "password",
    "database.url": "jdbc:oracle:thin:@oracle-xe1:1521:XE",
    "database.out.server.name": "dbzxout",
    "database.history.kafka.bootstrap.servers": "kafka:9092",
    "database.history.kafka.topic": "schema-changes-oracle",
    "database.connection.adapter": "logminer",
    "database.history.store.only.captured.tables.ddl": "true",
    "database.history.skip.unparseable.ddl": "true",
    "database.schema": "demo_schema",
    "schema.include.list": "demo_schema",
    "database.history.recovery.mode": "SCHEMA_ONLY_RECOVERY",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true",
    "schema.history.internal.kafka.bootstrap.servers": "kafka:9092",
    "schema.history.internal.kafka.topic": "schema-changes-inventory",
    "topic.prefix": "oracle-connector"
  }
}